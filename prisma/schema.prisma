// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Building {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  mainImage   String?
  logo        String?

  // Location
  latitude    Float?
  longitude   Float?
  address     String?

  // Contact
  whatsapp    String?
  phone       String?
  email       String?
  website     String?

  // Media
  initialVideo String?
  facadeImage  String?
  brochure     String?

  // Relations
  facadePoints FacadePoint[]
  amenities    Amenity[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
}

model FacadePoint {
  id          String   @id @default(cuid())
  name        String
  x           Float    // X coordinate on image (percentage)
  y           Float    // Y coordinate on image (percentage)
  images      String[] // Array of up to 5 images
  tour3dUrl   String?  // Kuula 3D tour link
  floorPlan   String?  // Floor plan image
  brochure    String?  // Brochure PDF link
  viewImages  String[] @default([]) // Exterior view images

  // Installation details
  totalArea     Float?   // Total area in m2
  internalArea  Float?   // Internal area in m2
  externalArea  Float?   // External area in m2
  bedrooms      Int?     // Number of bedrooms
  bathrooms     Int?     // Number of bathrooms
  hasBalcony    Boolean  @default(false)
  hasLaundry    Boolean  @default(false)
  hasTerrace    Boolean  @default(false)
  hasGameRoom   Boolean  @default(false)

  buildingId  String
  building    Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([buildingId])
}

model Amenity {
  id          String   @id @default(cuid())
  name        String
  image       String?
  order       Int      @default(0)

  buildingId  String
  building    Building @relation(fields: [buildingId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([buildingId])
}

// Better Auth Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]

  @@index([email])
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Account {
  id           String   @id @default(cuid())
  accountId    String
  providerId   String
  userId       String
  accessToken  String?
  refreshToken String?
  idToken      String?
  accessTokenExpiresAt DateTime?
  refreshTokenExpiresAt DateTime?
  scope        String?
  password     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([identifier, value])
}
